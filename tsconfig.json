{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "es2016",
      "es2015.iterable",
      "dom"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "src"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  }
}